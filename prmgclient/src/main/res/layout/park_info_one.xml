<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/park_picture"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/park_image_one" />

            <TextView
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:text="停车场我上线无所事事"
                android:textSize="20dp" />
        </RelativeLayout>
<LinearLayout
               android:id="@+id/linearlayout_p"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
            android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/p_lot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="现有空车位："
                android:textSize="18dp" />
            <TextView
                android:id="@+id/p_lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/p_lot_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp" />

        </RelativeLayout>
        <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:background="@color/devide_line" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

       <TextView
           android:id="@+id/p_address_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:text="地址："
           android:textSize="18dp" />
       <TextView
           android:id="@+id/p_address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/p_address_name"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:text="0"
           android:textSize="18dp" />

   </RelativeLayout>

   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:background="@color/devide_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/p_phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="联系电话："
                android:textSize="18dp" />
            <TextView
                android:id="@+id/p_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/p_phone_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp" />

        </RelativeLayout>
        <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:background="@color/devide_line" />
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="10dp" >


             <TextView
                 android:id="@+id/p_fee_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="收费标准："
                 android:textSize="18dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                  />

             <TextView
                android:id="@+id/p_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/p_fee_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/p_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/p_fee"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="元/小时"
                android:textSize="18dp" />


         </RelativeLayout>
        <View
                       android:layout_width="match_parent"
                       android:layout_height="0.7dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:background="@color/devide_line" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn2"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:text="导航"
                android:textSize="18dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
