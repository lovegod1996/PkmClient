<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/title_bar" />  
    
   <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">    
        
        <Button 
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/park_info_search_btn_bg"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:text="搜索"
            android:padding="5dp"  />
        
     <RelativeLayout
          android:id="@+id/searth_delete"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/park_info_edittext_bg"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/search">"
    <EditText
        android:id="@+id/ed_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:padding="3dp"
        android:textSize="16sp"
        android:hint="请输入..."/>
      
    <ImageView
        android:id="@+id/is_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:src="@mipmap/delete"
        android:visibility="gone"/>     
        </RelativeLayout>  
</RelativeLayout>

    <!-- <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/devide_line" /> -->
    <View android:layout_width="match_parent"
       android:layout_height="10dp"
       android:background="#ffffff" />
    <!-- <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/devide_line" /> -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
    <Button
        android:id="@+id/go_to_map"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/circle4"
        android:text="地图导航"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="360dp" />

        <ListView
            android:id="@+id/listView_park_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#F5F5F5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ListView>
    </RelativeLayout>

  </LinearLayout>
