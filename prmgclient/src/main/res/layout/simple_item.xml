<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="#F5F5F5">
   <RelativeLayout
       android:id="@+id/simple"
       android:layout_width="fill_parent"
       android:layout_height="120dp"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pay_record_bg0">
       <RelativeLayout 
            android:id="@+id/simple2"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       
        android:background="@drawable/pay_record_bg"
        >
           
        
       <TextView 
           android:id="@+id/park_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp" 
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
         
           android:text="name " /> 
           
       </RelativeLayout>
     
     <RelativeLayout
          android:id="@+id/simple3"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_below="@id/simple2"
          android:background="#FFFFFF"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="8dp">
        <TextView 
           android:id="@+id/data"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:textSize="16dp" />
    <TextView 
           android:id="@+id/pay2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textSize="16dp" 
           android:text="元"/>
        <TextView 
           android:id="@+id/pay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@id/pay2" 
           android:textSize="16dp" />
        <TextView 
           android:id="@+id/pay1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"            
           android:layout_toLeftOf="@id/pay" 
           android:text="费用： " />
        <TextView 
           android:id="@+id/start_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/data"
           android:layout_marginTop="5dp"
           android:textSize="12dp"
           android:text="开始时间： " />
         <TextView 
           android:id="@+id/time_start"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/start_time"
           android:layout_below="@id/data"
           android:layout_marginTop="5dp"
           android:textSize="12dp" />
        <TextView 
           android:id="@+id/end_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/start_time"
           android:textSize="12dp" 
           android:text="结束时间： " />
        <TextView 
           android:id="@+id/time_end"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/end_time"
           android:layout_below="@id/start_time"
           android:textSize="12dp"/>
        
         <TextView 
           android:id="@+id/time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/start_time"                    
           android:layout_alignParentRight="true"
           android:text="" />
        <TextView 
           android:id="@+id/time1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@id/time"           
           android:layout_below="@id/start_time"
           android:text="停车时间：" />
        </RelativeLayout>
      
   </RelativeLayout> 

</LinearLayout>
