<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prmgclient">


    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 以下是使用wifi访问网络所需的权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <receiver android:name=".NetWorkReceiver">
        <intent-filter>
            <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
        </intent-filter>
    </receiver>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >

        <activity android:name=".view.account.LoginActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.park.ParkInformation"></activity>
        <activity android:name=".view.park.ParkInformation_self"></activity>
        <activity android:name=".view.account.Account_information"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".view.account.pre_registerActivity"></activity>
        <activity android:name=".view.account.RegisterActivity"></activity>
        <activity android:name=".view.record.PayMoney"></activity>
        <activity android:name=".view.record.PayMoney_self"></activity>
        <activity android:name=".view.account.Account_manage"></activity>
        <activity android:name=".view.inorout.GateInOut"></activity>
        <activity android:name=".view.TitlebarActivity"  />
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>